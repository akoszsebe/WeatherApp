<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/weather_black</item>
        <item name="colorOnPrimary">@color/weather_accent_color</item>
        <item name="colorPrimaryDark">@color/weather_black</item>
        <item name="colorOnSurface">@color/weather_black</item>
        <item name="colorAccent">@color/weather_accent_color</item>
        <item name="colorSurface">@color/weather_gray_50</item>
        <item name="android:colorBackground">@color/weather_black</item>
        <item name="android:editTextColor">@color/weather_gray_50</item>
        <item name="android:textColorHint">@color/weather_gray_300</item>
        <item name="tabIndicatorColor">@color/weather_gray_50</item>
    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather"/>

    <style name="Theme.Weather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Weather.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Weather.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/weather_gray_300</item>
    </style>

    <style name="TabTextAppearance.Weather" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchViewStyle.Weather" parent="Theme.Weather">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="searchHintIcon">@null</item>
        <item name="closeIcon">@drawable/ic_close</item>
    </style>

    <style name="LoaderDialogTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/weather_gray_50</item>
    </style>
</resources>
