<resources>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/weather_gray_800</item>
        <item name="colorOnPrimary">@color/weather_indigo_500</item>
        <item name="colorPrimaryDark">@color/weather_gray_900</item>
        <item name="colorOnSurface">@color/weather_black</item>
        <item name="colorAccent">@color/weather_indigo_500</item>
        <item name="colorSurface">@color/weather_gray_50</item>
        <item name="android:colorBackground">@color/weather_gray_800</item>
    </style>

    <style name="Theme.Weather" parent="Base.Theme.Weather"/>

    <style name="Theme.Weather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Weather.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Weather.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TabTextAppearance.Weather" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
